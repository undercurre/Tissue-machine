.tapTab{
  width: 100%;
  height: 80rpx;
  background-color: white;
  color: black;
}
.tapTab scroll-view{
  height: 100%;
}
.tapTab .sort {
  position: relative;
  display: inline-block;
  font-size: 30rpx;
  margin-right: 30rpx;
  padding: 0 20rpx;
  height: 100%;
}
.tapTab .choose{
  color: red;
}
.tapTab .line {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 5rpx;
  border-radius: 10rpx;
  background: #16BA98;
  animation: spread .3s;
}
@keyframes spread {
  0% {
    width: 0;
    left: 50%;
  }

  100% {
    width: 100%;
    left: 0;
  }
}
