/* pages/myTissue/myTissue.wxss */
page{
  height: 100vh;
  width: 100vw;
}
.top {
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  z-index: 2;
}

.top .status {
  width: 100%;
}

.top .comment {
  width: 100%;
}

.top .comment .FlexBox {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  margin-bottom: 12rpx;
}

.top .comment .FlexBox .backButton {
  display: flex;
  justify-content: start;
  align-items: center;
}

.backButtonImage {
  width: 40rpx;
  height: 40rpx;
}

.mainTitle {
  color: #fff;
  font-size: 34rpx;
}

.blank {
  width: 40rpx;
  height: 40rpx;
}

.pageBG {
  background-image: linear-gradient(to right, #082F40, #142D38);
  position: relative;
  width: 100%;
  height: 100%;
}

/* 顶部背景 */
.pageBG .BackGround {
  width: 750rpx;
  height: 26vh;
  position: relative;
  z-index: 1;
}
.BackGround .balanceBox {
  position: absolute;
  top: 40%;
  width: 100%;
}
.pageBG .BackGround .balanceBox .count{
  font-size: 64rpx;
  color: #ffffff;
  width: fit-content;
  margin: 0 auto;
}
.pageBG .BackGround .balanceBox .mark{
  font-size: 26rpx;
  color: #ffffff;
  width: fit-content;
  margin: 0 auto 34rpx;
}
/* 领取记录 */
.pageBG .whiteSpace{
  width: 100%;
  background-color: #fff;
  border-top-left-radius: 12px;
  border-top-right-radius: 12px;
  position: relative;
  z-index: 1;
  height: calc(100% - 26vh);
}
.whiteSpace .gettingRecord{
  margin: 0 30rpx;
  padding: 40rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.whiteSpace .gettingRecord .txt{
  color: #333333;
  font-size: 30rpx;
  
}
.whiteSpace .gettingRecord view {
  display: flex;
  justify-content: flex-end;
  width: 80rpx;
  height: 40rpx;

}
.whiteSpace .gettingRecord .img{
  width: 16rpx;
  height: 30rpx;
}
.whiteSpace .line{
  margin: 0 30rpx 40rpx;
  background-color: #ccc;
  height: 3rpx;
}

/* 附近设备 */
.whiteSpace .btnGroup{
  width: 100%;
  margin: 40rpx 0;
  position: absolute;
  top: 54vh;
}
.whiteSpace .btnGroup .nearBy{
  margin: 0 70rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #082F40;
  border-radius: 24px;
  height: 96rpx;
  line-height: 96rpx;
}

/* 隐藏分享按钮的边框 */
button[class="btn"]::after {
  border: 0;
}
