page {
  background-repeat: no-repeat;
  background-size: 100% 1624rpx;
  -moz-background-size: 100% 100%;
  background-image: url(https://admachine-1254098248.cos.ap-guangzhou.myqcloud.com/bgAd3x.png);
}

/* 顶部 */
.top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}

.top .status {
  width: 100%;
}

.top .comment {
  width: 100%;
}

.top .comment .FlexBox {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  margin-bottom: 12rpx;
}

.top .comment .FlexBox .backButton {
  display: flex;
  justify-content: start;
  align-items: center;
}

.backButtonImage {
  width: 40rpx;
  height: 40rpx;
}

.mainTitle {
  color: #fff;
  font-size: 17px;
}

/* 表单 */
.form{
  position: relative;
  margin: 0 30rpx 5vh;
  width: auto;
  top: 30vh;
  height: fit-content;
  background-color: #fff;
  border-radius: 26rpx;
}
.form .tips{
  display: flex;
  padding-top: 30rpx;
  margin-bottom: 92rpx;
  width: 100%;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}
.form .name{
  padding: 0 30rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.form .name .left{
  display: inline-block;
  height: 40rpx; 
  vertical-align: middle;
}
.form .name .left .mark{
  font-size: 28rpx;
  color: red;
}
.form .name .left .tip{
  font-size: 28rpx;
  color: #333;
}

.form .name .nameInput{
  background-color: #fff;
  width: 65%;
  text-align: right;
}
.form .line{
  margin: 10rpx 30rpx 20rpx 30rpx;
  background-color: #ccc;
  height: 3rpx;
}

.form .phone{
  padding: 0 30rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.form .phone .left{
  display: inline-block;
  height: 40rpx; 
  vertical-align: middle;
}
.form .phone .left .mark{
  font-size: 28rpx;
  color: red;
}
.form .phone .left .tip{
  font-size: 28rpx;
  color: #333;
}

.form .phone .nameInput{
  background-color: #fff;
  width: 65%;
  text-align: right;
}

.form .unit {
  padding: 0 30rpx;
  width: 100%;
  font-size: 28rpx;
  color: #333;
}

.form .unit .mark{
  font-size: 28rpx;
  color: red;
}
.form .unit .tip{
  font-size: 28rpx;
  color: #333;
}
.form .unit radio-group{
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.form .unit radio-group .radioFlex{
  display: flex;
  align-items: center;
}
/* radio外框样式 */
.form .unit radio-group radio .wx-radio-input{
  width: 28rpx;
  height: 28rpx;
  border: 2rpx solid #082F40;
  border-radius: 50%;
  background: none;
}
/* radio选中后外框样式 */
.form .unit radio-group radio .wx-radio-input
 .wx-radio-input-checked {
  border-width: 3rpx!important;
 }
 /* radio选中后内部样式 */
 .form .unit radio-group radio .wx-radio-input.wx-radio-input-checked::before {
  width: 90%;
  height: 90%;
  background: #082F40;
  border-radius: 50%;
  content: '';
 }
.form .unit radio-group text{
  font-size: 28rpx;
  color: #333;
}
.form .adType {
  padding: 0 30rpx;
  width: 100%;
  font-size: 28rpx;
  color: #333;
}

.form .adType .mark{
  font-size: 28rpx;
  color: red;
}
.form .adType .tip{
  font-size: 28rpx;
  color: #333;
}
/* checkbox外框样式 */
.form .adType checkbox .wx-checkbox-input {
  width: 28rpx;
  height: 28rpx;
  border: 2rpx solid #082F40;
  border-radius: 50%;
}
/*复选框外框选中样式*/
.form .adType checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border-width: 3rpx;
}
/*复选框选中后内部样式*/
.form .adType 
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 80%;
  height: 80%;
  background: #082F40;
  border-radius: 50%;
  content: '';
  /* transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1); */
}
.form .btnBox{
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 92rpx;
  padding-bottom: 82rpx;
}
.form .btnBox .submitBtn{
  width: 80%;
  background-color: #082F40;
  border-radius: 24px;
  color: #fff;
  font-size: 32rpx;
}
.form .unit .unitName{
  margin-top: 40rpx;
  width: 100%;
}
.form .unit .unitName text{
  font-size: 28rpx;
  color: #333;
}
.form .unit .unitName input{
  width: 70%;
  float: right;
  background-color: #fff;
  text-align: right;
}
/* 弹窗 */
.cover{
 position: fixed;
 width: 100%;
 height: 100%;
 top: 0;
 left: 0;
 background-color: rgba(00, 00, 00, 0.6);
 z-index: 1000;
}
.cover .Pop{
  width: 90%;
  height:fit-content;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 20rpx;
  position: absolute;
  top: 30%;
  left: 5%;
}
.cover .Pop .img{
  width: 184rpx;
  height: 184rpx;
  margin: 46rpx 0;
}
.cover .Pop .mark{
  font-size: 32rpx;
  color: #333;
  margin-bottom: 32rpx;
}
.cover .Pop .txt{
  font-size: 26rpx;
  color: #333;
}
.cover .Pop .comfirmBtn{
 width: 85%;
 height: 100rpx;
 display: flex;
 justify-content: center;
 align-items: center;
 background-color: #082F40;
 color: #fff;
 border-radius: 24px;
 margin-top:118rpx;
 margin-bottom: 60rpx;
}

