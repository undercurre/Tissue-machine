<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.modules.ad.dao.AdRechargeLevelDao">

    <sql id="selectSql">
        SELECT
        T.ID,
        T.BALANCE,
        T.IS_DELETE,
        T.NEED_PRICE
        FROM AD_RECHARGE_LEVEL T
        WHERE 1=1 AND T.IS_DELETE = 0
        <if test="params.name != null and params.name.trim() != ''">
            AND T.NAME LIKE '%${params.name}%'
        </if>
        ORDER BY T.BALANCE
    </sql>

    <select id="selectAdRechargeLevelPage" resultType="com.platform.modules.ad.entity.AdRechargeLevelEntity">
        <include refid="selectSql"/>
    </select>

    <select id="queryAll" resultType="com.platform.modules.ad.entity.AdRechargeLevelEntity">
        <include refid="selectSql"/>
    </select>
</mapper>
